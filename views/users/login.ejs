<% layout('layouts/auth')%>

<div class="container">
    <div class="row">
        <div class="col-6 offset-3">
            <div class="card shadow my-5 p-5">
                <h2>
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor"
                        class="bi bi-bug-fill" viewBox="0 0 16 16">
                        <path
                            d="M4.978.855a.5.5 0 1 0-.956.29l.41 1.352A4.985 4.985 0 0 0 3 6h10a4.985 4.985 0 0 0-1.432-3.503l.41-1.352a.5.5 0 1 0-.956-.29l-.291.956A4.978 4.978 0 0 0 8 1a4.979 4.979 0 0 0-2.731.811l-.29-.956z" />
                        <path
                            d="M13 6v1H8.5v8.975A5 5 0 0 0 13 11h.5a.5.5 0 0 1 .5.5v.5a.5.5 0 1 0 1 0v-.5a1.5 1.5 0 0 0-1.5-1.5H13V9h1.5a.5.5 0 0 0 0-1H13V7h.5A1.5 1.5 0 0 0 15 5.5V5a.5.5 0 0 0-1 0v.5a.5.5 0 0 1-.5.5H13zm-5.5 9.975V7H3V6h-.5a.5.5 0 0 1-.5-.5V5a.5.5 0 0 0-1 0v.5A1.5 1.5 0 0 0 2.5 7H3v1H1.5a.5.5 0 0 0 0 1H3v1h-.5A1.5 1.5 0 0 0 1 11.5v.5a.5.5 0 1 0 1 0v-.5a.5.5 0 0 1 .5-.5H3a5 5 0 0 0 4.5 4.975z" />
                    </svg>
                    Bug Tracker Login
                </h2>
                <form action="/login" method="POST" class="needs-validation" novalidate>
                    <div class="mb-3">
                        <label class="form-label" for="username">Username</label>
                        <input class="form-control" type="text" id="username" name="username" required>
                    </div>

                    <div class="mb-3">
                        <label class="form-label" for="password">Password</label>
                        <input class="form-control" type="password" id="password" name="password" required>
                    </div>
                    <button class="btn btn-primary">Login</button>
                </form>
                <hr>
                <a href="/register">Register as a new user</a>
                <hr>
                <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
                    Sign In as Demo User
                </button>
                <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel"
                    aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLabel">Demo User Login</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"
                                    aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <div class="container-fluid">
                                    <div class="row">
                                        <div class="col-3">
                                            <form action="/login/demo" method="POST">
                                                <input type="hidden" name="username" id="username" value="Demo_Admin">
                                                <input type="hidden" name="password" id="password" value="demoadmin">
                                                <button class="btn text-wrap">
                                                    <svg xmlns="http://www.w3.org/2000/svg" width="50" height="50"
                                                        fill="#118ab2" class="bi bi-person-badge" viewBox="0 0 16 16">
                                                        <path
                                                            d="M6.5 2a.5.5 0 0 0 0 1h3a.5.5 0 0 0 0-1h-3zM11 8a3 3 0 1 1-6 0 3 3 0 0 1 6 0z" />
                                                        <path
                                                            d="M4.5 0A2.5 2.5 0 0 0 2 2.5V14a2 2 0 0 0 2 2h8a2 2 0 0 0 2-2V2.5A2.5 2.5 0 0 0 11.5 0h-7zM3 2.5A1.5 1.5 0 0 1 4.5 1h7A1.5 1.5 0 0 1 13 2.5v10.795a4.2 4.2 0 0 0-.776-.492C11.392 12.387 10.063 12 8 12s-3.392.387-4.224.803a4.2 4.2 0 0 0-.776.492V2.5z" />
                                                    </svg><br>
                                                    Admin
                                                </button>
                                            </form>
                                        </div>
                                        <div class="col-3">
                                            <form action="/login/demo" method="POST">
                                                <input type="hidden" name="username" id="username" value="Demo_Manager">
                                                <input type="hidden" name="password" id="password" value="demomanager">
                                                <button class="btn text-wrap">
                                                    <svg xmlns="http://www.w3.org/2000/svg" width="50" height="50"
                                                        fill="#06d6a0" class="bi bi-person-badge" viewBox="0 0 16 16">
                                                        <path
                                                            d="M6.5 2a.5.5 0 0 0 0 1h3a.5.5 0 0 0 0-1h-3zM11 8a3 3 0 1 1-6 0 3 3 0 0 1 6 0z" />
                                                        <path
                                                            d="M4.5 0A2.5 2.5 0 0 0 2 2.5V14a2 2 0 0 0 2 2h8a2 2 0 0 0 2-2V2.5A2.5 2.5 0 0 0 11.5 0h-7zM3 2.5A1.5 1.5 0 0 1 4.5 1h7A1.5 1.5 0 0 1 13 2.5v10.795a4.2 4.2 0 0 0-.776-.492C11.392 12.387 10.063 12 8 12s-3.392.387-4.224.803a4.2 4.2 0 0 0-.776.492V2.5z" />
                                                    </svg><br>
                                                    Project Manager
                                                </button>
                                            </form>
                                        </div>
                                        <div class="col-3">
                                            <form action="/login/demo" method="POST">
                                                <input type="hidden" name="username" id="username"
                                                    value="Demo_Developer">
                                                <input type="hidden" name="password" id="password"
                                                    value="demodeveloper">
                                                <button class="btn text-wrap">
                                                    <svg xmlns="http://www.w3.org/2000/svg" width="50" height="50"
                                                        fill="#f4a261" class="bi bi-person-badge" viewBox="0 0 16 16">
                                                        <path
                                                            d="M6.5 2a.5.5 0 0 0 0 1h3a.5.5 0 0 0 0-1h-3zM11 8a3 3 0 1 1-6 0 3 3 0 0 1 6 0z" />
                                                        <path
                                                            d="M4.5 0A2.5 2.5 0 0 0 2 2.5V14a2 2 0 0 0 2 2h8a2 2 0 0 0 2-2V2.5A2.5 2.5 0 0 0 11.5 0h-7zM3 2.5A1.5 1.5 0 0 1 4.5 1h7A1.5 1.5 0 0 1 13 2.5v10.795a4.2 4.2 0 0 0-.776-.492C11.392 12.387 10.063 12 8 12s-3.392.387-4.224.803a4.2 4.2 0 0 0-.776.492V2.5z" />
                                                    </svg><br>
                                                    Developer
                                                </button>
                                            </form>
                                        </div>
                                        <div class="col-3">
                                            <form action="/login/demo" method="POST">
                                                <input type="hidden" name="username" id="username"
                                                    value="Demo_Submitter">
                                                <input type="hidden" name="password" id="password"
                                                    value="demosubmitter">
                                                <button class="btn text-wrap">
                                                    <svg xmlns="http://www.w3.org/2000/svg" width="50" height="50"
                                                        fill="#ffd166" class="bi bi-person-badge" viewBox="0 0 16 16">
                                                        <path
                                                            d="M6.5 2a.5.5 0 0 0 0 1h3a.5.5 0 0 0 0-1h-3zM11 8a3 3 0 1 1-6 0 3 3 0 0 1 6 0z" />
                                                        <path
                                                            d="M4.5 0A2.5 2.5 0 0 0 2 2.5V14a2 2 0 0 0 2 2h8a2 2 0 0 0 2-2V2.5A2.5 2.5 0 0 0 11.5 0h-7zM3 2.5A1.5 1.5 0 0 1 4.5 1h7A1.5 1.5 0 0 1 13 2.5v10.795a4.2 4.2 0 0 0-.776-.492C11.392 12.387 10.063 12 8 12s-3.392.387-4.224.803a4.2 4.2 0 0 0-.776.492V2.5z" />
                                                    </svg><br>
                                                    Submitter
                                                </button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>